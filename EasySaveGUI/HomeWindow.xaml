<Window x:Class="EasySaveGUI.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="HomeWindow" 
        Height="450" 
        Width="800" 
        Icon="\Ressources\images\logo\logo_large.png">
    <Grid>
        <Frame x:Name="frame" Source="HomePage.xaml" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="50, 0, 50, 10"/>
        <ComboBox Name="cbb_languages" ItemsSource="{Binding Languages}" Margin="0,0,10,10" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="150" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>

</Window>
