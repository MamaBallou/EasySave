                                    Background="White"
                                    Height="30"
                                    CornerRadius="10"
                                    Margin="0,0,0,0"
                                    Cursor="Hand">

                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation To="#4e7e92"
                                                                Duration="0:0:0.25"
                                                                Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"/>
                                                <ColorAnimation To="White"
                                                                Duration="0:0:0.25"
                                                                Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
                                                                Storyboard.TargetName="SaveSettingsButtonLabel"/>
                                                <ColorAnimation To="White"
                                                                Duration="0:0:0.25"
                                                                Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
                                                                Storyboard.TargetName="SaveSettingsButtonIcon"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation To="White"
                                                                Duration="0:0:0.25"
                                                                Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"/>
                                                <ColorAnimation To="Black"
                                                                Duration="0:0:0.25"
                                                                Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
                                                                Storyboard.TargetName="SaveSettingsButtonLabel"/>
                                                <ColorAnimation To="Black"
                                                                Duration="0:0:0.25"
                                                                Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
